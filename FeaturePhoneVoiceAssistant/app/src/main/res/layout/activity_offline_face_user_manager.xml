<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_list_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/baidu_face_user_manager_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/user_list_title"
        android:background="@android:color/white" />

    <ListView
        android:id="@+id/user_list_view"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_below="@+id/user_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:dividerHeight="0dp"
        android:divider="#0000"
        android:choiceMode="singleChoice"/>

    <ImageView
        android:id="@+id/face_item_add"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:src="@drawable/baseline_add_white_48dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/face_item_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:src="@drawable/baseline_delete_white_48dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/face_item_select_all"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:focusable="true"
        android:src="@drawable/baseline_check_box_outline_blank_white_48dp"
        tools:ignore="ContentDescription" />

</RelativeLayout>