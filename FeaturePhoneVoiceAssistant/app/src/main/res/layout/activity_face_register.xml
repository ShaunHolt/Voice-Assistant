<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/baidu_face_register_title"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/tv_title"
        android:background="@color/white" />

    <EditText
        android:id="@+id/name_edit_text"
        android:focusable="true"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="@string/baidu_face_register_name_input"
        android:inputType="text"
        android:maxLines="1"
        tools:ignore="Autofill" />

    <com.fih.featurephone.voiceassistant.baidu.face.camera.FaceCameraPreview
        android:id="@+id/face_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/name_edit_text"
        android:layout_above="@+id/detect_reg_text"/>

    <TextView
        android:id="@+id/detect_reg_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_above="@+id/detect_reg_image_item"
        android:text="@string/baidu_face_register_end"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/face_register_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:src="@drawable/baseline_delete_white_48dp"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/detect_reg_image_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:src="@drawable/baseline_face_white_48dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/camera_switch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:focusable="true"
        android:src="@drawable/baseline_flip_camera_ios_white_48dp"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

</RelativeLayout>

