<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/send_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/send_head"
            android:contentDescription="@string/image_view_send_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/send_head"/>

        <TextView
            android:id="@+id/send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/send_head"
            android:background="@drawable/send_messages"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textIsSelectable="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receive_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/receive_head"
            android:contentDescription="@string/image_view_receive_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/receive_head"/>

        <TextView
            android:id="@+id/receive_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/receive_head"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:background="@drawable/receive_messages"
            android:textSize="20sp"
            android:textColor="#000"
            android:textIsSelectable="true"
            />
    </RelativeLayout>
</LinearLayout>
